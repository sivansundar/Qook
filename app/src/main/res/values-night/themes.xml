<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Qook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">#fff</item>
        <item name="android:textColorPrimary">#fff</item>

    </style>


    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>


    <style name="tabAppearance" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/teal_200</item>
        <item name="tabSelectedTextColor">@color/teal_200</item>

    </style>


</resources>